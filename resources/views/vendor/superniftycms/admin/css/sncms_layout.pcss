body.sncms_admin_layout {

    background-color: var(--color-gray-200);

    padding: 5rem 1rem;

    .sncms_topnav {


        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        width: 100vw;
        z-index: 999999999999999;

        display:flex;
        padding: 1rem;
        background-color: var(--color-gray-900);
        box-shadow: 1px 2px 3px rgba(0,0,0,.25);

        ul {
            position: relative;
            display:flex;
            align-items: center;
            margin: 0;

            li {

                display: flex;
                align-items: center;
                position: relative;
                color: var(--color-white);
                margin: 0 .375rem 0 0;
                &:first-child { margin-left: 0; }
                white-space: nowrap;
                max-width: 300px;
                line-height: 1;
                font-size: .75rem;
                user-select: none;

                &:after {
                    font-family: 'Material Symbols Outlined';
                    font-variation-settings: 'FILL' 0, 'wght' 700, 'GRAD' 200, 'opsz' 48;
                    content: '\e941';
                    margin-left: .5rem;
                    color: var(--color-gray-200);
                }

                &:last-child {
                    &:after {
                        content: '';
                    }
                }

                a,
                a:link,
                a:visited {
                    color: var(--color-white);
                }

            }

        }

    }

    .sn_error {
        display: flex;
        align-items: center;
        padding: .5rem 1rem;
        background-color: var(--color-red-500);
        color: var(--color-white);
        border-radius: .25rem;
        margin-bottom: 1rem;

        h2 {
            font-weight: 700;
            font-size: 1.25rem;
            margin-right: 1rem;
        }

        p {

        }

    }


}
