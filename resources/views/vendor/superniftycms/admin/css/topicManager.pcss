

body#superniftycms-topics-edit,
body#superniftycms-topics-create
{


    #gotourl {
        position: relative;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        transition: all 250ms ease-in-out;
        color: var(--color-gray-500);
        margin: 0;

        &:before {
            font-family: 'Material Symbols Outlined';
            font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 200, 'opsz' 22;
            content: '\e89e';
            z-index: 2;
        }

        &:hover {
            color: var(--color-blue-600);
        }

    }


    &[data-display_topic_save_button]{

        .snSaveButton {
            opacity: 1;
            pointer-events: auto;
        }
    }

    h2 {
        font-size: 1.5rem;
        color: var(--color-gray-300);
        font-weight: 900;
        margin: 2rem auto .125rem 0;
        user-select: none;
        pointer-events: none;
    }


    #layoutFields {
        position: relative;
        display: flex;
        justify-content: space-between;
        width: 100%;



        #layoutW {
            font-size: .75rem;

            label {
                padding: .25em 1em .0125em 1em;
            }
        }

        /* typeahead */
        .tt-list {

            border-radius: .25rem;
            box-shadow: 1px 2px 3px rgba(0,0,0,.25);
            border: 1px solid var(--color-gray-300);
            transform: translate(1rem, -1.5rem);

            .tt-suggestion {
                padding: .5rem 1rem;
                white-space: nowrap;
                font-size: .875rem;

                &.tt-selected,
                &:hover {
                    color: var(--color-white);
                    background-color: var(--color-blue-300);

                }

            }

        }

    }

    section {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    #titleSNFW { margin-bottom: 0; }

    #topicURLW {
        position: relative;
        font-size: 1rem;
        display: flex;
        align-items: center;
        transition: all 250ms ease-in-out;
        font-weight: 700;
        width: 100%;

        &:after {
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            display: flex;
            align-items: center;
            padding: 0 1rem;
            color: var(--color-white);
            white-space: nowrap;
            font-size: .875rem;
            z-index:12;
            pointer-events: none;
            user-select: none;
        }

        i#pageurl{

            padding-left: 4rem;



            &:before {
                position: absolute;
                top: 1.25rem;
                left: 0;

                font-style: normal;
                display: flex;
                justify-content: center;
                user-select: none;

                font-size: .75rem;
                font-weight: 700;
                padding: .25rem 1rem;
                border-radius: .25rem 0 0 .25rem;
                margin-right: .5rem;
                transition: all 250ms ease-in-out;
                width: 3rem;
                text-align: center;
                margin-left: -1rem;

                background-color: var(--color-gray-900);
                color: var(--color-white);
                content: 'URL';
            }

            &:after {
                position: absolute;
                top: 1rem;
                left: 2rem;
                width: 0;
                height: 0;
                border-style: solid;
                border-width: 1rem 0 1rem 1rem;
                border-color: transparent transparent transparent var(--color-gray-900);
                content: '';
            }

        }

        i[data-domain] {
            font-style: normal;
            &:before {
                color: var(--color-gray-500);
                content: attr(data-domain);
                font-weight: 700;
                transition: inherit;
            }
        }

        #topicURL {
            padding: 1.25em 0 1.25em 0;
            transition: inherit;
            border-radius: .25em;
            border: 1px solid transparent!important;
            color: var(--color-gray-900);
            background-color: transparent;
            width: 100%;
            outline: none;
            box-shadow: none;

            &:focus {
                padding: .25em 0 .25em 1em;
                margin: 1em 0 1em .25em;
                outline: none;
                box-shadow: none;
            }

        }

        &:focus-within {
            #pageurl {
                background-color: var(--color-blue-800);
            }

            #gotourl {
                margin: 0 0 0 5em;
            }
        }




    }

    #bladeFields {
        display: flex;
        margin: 0 0 0 auto;
        background-color: var(--color-white);
        border-radius: .25rem;

        #bladeW {
            color: var(--color-gray-400);
            border: 1px solid var(--color-gray-400);
            overflow: hidden;
            border-radius: .25rem;

            select {
                color: var(--color-gray-900);
            }
        }
    }


    &[data-url_status='short'] {

        #topicURLW {
             &:after {
                 content: 'TOO SHORT';
                 color: var(--color-yellow-500)!important;
             }

            #topicURL {
                padding: .25em 1em;
                margin: 1em .5em 1em .25em;
                background-color: var(--color-yellow-100)!important;
                color: var(--color-yellow-500)!important;
                border-color: var(--color-yellow-500)!important;
            }

        }

    }

    &[data-url_status='ng'],
    &[data-url_status='empty'],
    &[data-url_status='taken'],
    &[data-url_status='reserved']
    {

        #topicURLW {
             &:after {
                 content: 'NO GOOD';
                 color: var(--color-red-500)!important;
             }

            #topicURL {
                padding: .25em 1em;
                margin: 1em .5em 1em .25em;
                background-color: var(--color-red-100)!important;
                color: var(--color-red-500)!important;
                border-color: var(--color-red-500)!important;

                &::placeholder {
                    color: var(--color-red-500)!important;
                }

            }

        }

    }

    &[data-url_status='empty'] #topicURLW:after { content: 'EMPTY'; }
    &[data-url_status='reserved'] #topicURLW:after { content: 'RESERVED'; }
    &[data-url_status='taken'] #topicURLW:after { content: 'ALREADY IN USE'; }
    &[data-url_status='ok'],
    &[data-url_status='stet']
    {

        #topicURLW {

            &:after {
                content: 'OK';
                opacity: 0;
                transition: inherit;
            }

            &:focus-within {
                &:after {
                    opacity: 1;
                    color: var(--color-green-500)!important;
                }

                #topicURL {
                    color: var(--color-green-500)!important;
                    background-color: var(--color-green-100)!important;
                    border-color: var(--color-green-500)!important;
                }

            }

        }

    }


    #editorFormW {
        @apply flex flex-col max-w-7xl mx-auto;

    }

    #topicEditForm { }

    .titleTools {
        display: flex;
        justify-content: space-between;
        align-items: center;

        ul.tools {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin: 0 0 0 2rem;
            font-size: 1.5rem;

            li {
                color: var(--color-gray-300);
                transition: all 250ms ease-in-out;
                &:hover {
                    color: var(--color-gray-600);
                    background-color: transparent;
                }
            }

            li[data-a]:after {
                font-family: 'Material Symbols Outlined';
            }

            li.sn_ddmenu.status {

                margin: 0 0 0 1rem;
                i {
                    margin: 0!important;
                    &:before { font-weight: 400!important; }
                }



            }

            li[data-a='topictogglepublish']:after{
                font-variation-settings: 'FILL' 1, 'wght' 700, 'GRAD' 200, 'opsz' 48;
                content: '\e9f5';
            }

            li[data-a='topicview']:after{
                font-variation-settings: 'FILL' 1, 'wght' 700, 'GRAD' 200, 'opsz' 48;
                content: '\e8f4';
            }

            li[data-a='topicsettings']:after{
                font-variation-settings: 'FILL' 1, 'wght' 700, 'GRAD' 200, 'opsz' 48;
                content: '\e8b8';
            }


        }


    }



    #topicSettingsForm {

    }





    #topicContent {

        margin-bottom: 5rem;



        input[type='date'],
        input[type='tel'],
        input[type='email'],
        input[type='password'],
        input[type='text'],
        textarea
        {

            border: none!important;
            outline:none!important;
            width: 100%;

            &:focus {
                border: none!important;
                outline:none!important;
                box-shadow: none!important;
            }

            &::placeholder {
                opacity: 0.5;
                color: var(--color-gray-500);
                font-size: inherit;


            }


        }






    }

    #topicMetas {

        .metas {
            .snfw {
                .mediaTools {
                    .addVendorVideo {
                        display: none;
                    }
                }
            }
        }


    }

    #sn_topicFieldTemplates {
        display: none;
    }






}



.sn_moving_tiny_mces {
    pointer-events: none!important;
    user-select: none!important;
    opacity: .25!important;
}

ul.tools li {
    width: auto!important;
}


#deleteTopicButton{

    position: relative;
    display: flex;
    align-items: center;
    font-size: 2rem;
    margin: 1rem auto 1rem 0;
    height: 2rem;
    color: var(--color-gray-300);

    &:before{
        font-family: 'Material Symbols Outlined';
        font-variation-settings: 'FILL' 0, 'wght' 700, 'GRAD' 200, 'opsz' 48;
        content: '\e872';
        transition: all 250ms ease-in-out;
    }

    &:after {
        content: "delete this topic? this cannot be undone!";
        font-size: .875rem;
        font-weight: 700;
        text-transform: uppercase;
        background-color: var(--color-red-500);
        color: var(--color-white);
        border-radius: .25rem;
        opacity: 0;
        pointer-events: none;
        overflow: hidden;
        width: 0;
        padding: 0;
        white-space: nowrap;
    }

    &:hover {
        color: var(--color-red-400);
        &:before { transform: scale(1.5); }
    }

    &.warn {

        &:before {
            color: var(--color-red-500);
            font-variation-settings: 'FILL' 1, 'wght' 700, 'GRAD' 200, 'opsz' 48;
            content: '\e92b';
            transform: scale(2);
            margin-right: 2rem;
        }

        &:after {
            opacity: 1;
            padding: 1rem 1rem;
            width: 100%;
        }

    }

}

#fieldSource {

    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 999999999;
    width: 4rem;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    transition: all 250ms ease-in-out;


    .w {

        opacity: .25;
        transform: scale(.5);
        pointer-events: auto;
        transition: all 250ms ease-in-out;
        padding: 8rem 1.5rem;

        &:hover {
            opacity: 1;
            transform: scale(1);
        }

    }


    .snfw {
        width: 2rem;
        height: 2rem;
        margin-top: .5rem;
        border: none;
        background-color: transparent;
        cursor: grab;
        border-radius: .25rem;
        overflow: hidden;
        box-shadow: 1px 2px 3px rgba(0,0,0,.25);

        * {
            pointer-events: none;
            display: none;
        }

        .settings {
            display: flex;

            * {
                pointer-events: none;
                display: none;
            }

            .h {
                top: 0;
                left: 0;
                display: flex;
                border-radius: .25rem;
            }
        }

        &:last-child {
            margin-bottom: 1rem;
        }

        &:hover {
            transform: scale(1.1);

            .settings .h {
                background-color: var(--color-blue-500);

            }
        }



    }




}





#metasW {

    position: relative;
    display: flex;
    background-color: var(--color-white);
    padding: 1rem;
    border-radius: .25rem;
    box-shadow: 1px 2px 3px rgba(0,0,0,.25);
    margin: 1rem 0;

    &:before {
        position: absolute;
        top: -5.75rem;
        left: 1rem;
        font-size: 6rem;
        color: var(--color-white);
        content: 'SEO';
        font-weight: 900;
    }

    .txt, .img {
        display: flex;
        flex-direction: column;

        .primary, .secondary {
            display: flex;
            flex-direction: column;
            position: relative;

            &.secondary {
                margin-top: 1rem;
            }

        }

        .mfow {
            display: flex;
            .mfw:first-child {
                margin-right: .125rem;
            }
        }

        .mfw {

            position: relative;
            background-color: var(--color-gray-100);
            margin-bottom: .125rem;
            transition: all 250ms ease-in-out;
            width: 100%;

            &:first-child {
                border-radius: .25rem .25rem 0 0;
            }

            &:last-child {
                border-radius: 0 0 .25rem .25rem;
            }



            &:after {
                position: absolute;
                top: 0;
                left: 0;
                font-size: .5rem;
                content: attr(data-label);
                padding: .5rem;
                text-transform: uppercase;

            }

            input[type='text'],
            input[type='date'],
            input[type='datetime-local'],
            textarea
            {

                background-color: transparent;
                padding: 1.75rem 1rem 1rem 1rem;
                outline: none;
                box-shadow: none;
                width: 100%;
                font-size: .875rem;
                line-height: 1.5;
                color: var(--color-gray-600);

                ::placeholder {
                    color: var(--color-gray-300);
                }

                &:focus {
                    outline: none;
                    box-shadow: none;
                }

            }

            textarea {
                min-height: 10rem;
            }


            ul {
                padding: 1.75rem .5rem .5rem .5rem;
                display: flex;
                flex-wrap: wrap;
                margin: 0;

                li {
                    display: flex;
                    align-items: center;
                    padding: .125rem .75rem 0 .75rem;
                    font-size: .65rem;
                    background-color: var(--color-gray-400);
                    color: var(--color-white);
                    line-height: 1.75;
                    margin: 0 .25rem .25rem 0;
                    border-radius: 1rem;
                    text-transform: uppercase;
                    cursor: pointer;
                    user-select: none;
                    transition: all 250ms ease-in-out;

                    &:hover {
                        background-color: var(--color-gray-600);

                    }

                    &.active {
                        background-color: var(--color-blue-500);
                    }
                }
            }

            &:focus-within {
                background-color: var(--color-blue-100);
            }

        }



        &.txt {

            width: 100%;
            margin-right: 1rem;


        }

        &.img {

            max-width: 300px;

            label {
                font-size: .5rem;
                text-transform: uppercase;
                margin: 0 auto .25rem 0;
            }

            .sncms-dropper {
                position: relative;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                background-color: var(--color-gray-100);
                width: 100%;
                border-radius: .25rem;
                margin: 0 0 1rem 0;
                transition: all 250ms ease-in-out;
                overflow: hidden;
                aspect-ratio: 1.91/1;

                &:before {
                }

                img {
                    transition: all 250ms ease-in-out;
                }

                &.dragover {
                    transform:scale(1.025);
                    background-color: var(--color-blue-500);
                    box-shadow: 1px 2px 3px rgba(0,0,0,.25);
                    img {
                        opacity: .25;
                        filter: grayscale(100);
                    }
                }

                &.bad-file-type {
                    background-color: var(--color-red-200);
                    &:before {
                        position: absolute;
                        inset: 25% 10%;
                        z-index:25;
                        display: flex;
                        align-items: center;
                        padding: .5rem 1rem;
                        background-color: var(--color-red-500);
                        color: var(--color-white);
                        font-size: .75rem;
                        font-weight: 500;
                        text-align: center;
                        text-transform: uppercase;
                        border-radius: .25rem;
                        content: 'JPGs, PNGS or GIFs only please!';
                        pointer-events: none;
                    }
                    img {
                        opacity: .25;
                        filter: grayscale(100);
                    }
                }

            }

            #progressBarW {
                position: absolute;
                bottom:0;
                left:0;
                z-index:99999;
                display: flex;
                height: 6px;
                width: 100%;
                overflow: hidden;

                #progressBar {
                    position: absolute;
                    top: 0;
                    left: 0;
                    height: 6px;
                    width: 0;
                    background: var(--color-green-500);
                    transition: opacity 1000ms ease-in-out;
                }

            }

            h5 {

            }

            p {
                font-size: .75rem;
            }

            ul {
                font-size: .75rem;
                margin: -1rem 0 .25rem 0;
            }


    }




    }





}






