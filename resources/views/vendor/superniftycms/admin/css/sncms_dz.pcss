
.progressBarW {
    position: absolute;
    bottom:0;
    left:0;
    z-index:99999;
    display: flex;
    height: 6px;
    width: 100%;
    overflow: hidden;

    .progressBar {
        position: absolute;
        top: 0;
        left: 0;
        height: 6px;
        width: 0;
        background: var(--color-green-500);
        transition: opacity 250ms ease-in-out;
    }

}



.mediazone {

    width: 100%;
    display: flex;
    flex-wrap: wrap;
    position: relative;
    padding: 0 0 1rem 1rem;
    min-height: 7rem;

    .mz-preview {

        position: relative;
        z-index: 1;
        display: flex;
        width: 7rem;
        height: 7rem;
        border-radius: 7rem;
        box-shadow: 1px 2px 3px rgba(0,0,0,.25);
        margin: 0 1rem 1rem 0;
        transform: scale(.85);
        filter: grayscale(.75);
        background-color: var(--color-white);

        align-items: center;
        justify-content: center;
        color: #fff;
        transition: transform 250ms ease-in-out, filter 250ms ease-in-out;
        pointer-events: auto;
        cursor: pointer;
        user-select: none;

        &:after {
            position: absolute;
            top: .5em;
            left: 0;
            background-color: var(--color-gray-900);
            color: var(--color-white);
            font-size: .5rem;
            text-transform: uppercase;
            padding: .25rem .5rem;
            border-radius: .25rem;
            box-shadow: 1px 2px 3px rgba(0,0,0,.25);
            content: attr(data-title);
            white-space: nowrap;
            pointer-events: none;
            opacity: 0;
            z-index: 999;
            transition: none;
        }

        &:hover {

            z-index: 9;

            transform: scale(1.05);
            filter: grayscale(0);
            .dz-details {
                &:after {
                    opacity: 1;
                }
            }

            .dz-image {
                box-shadow: 0 0 5px 2px rgba(0,0,150,.99);
            }

            &:after {
                opacity: 1;
            }

        }



        img {
            width: 7rem;
            height: 7rem;

            object-fit: cover;
            overflow: hidden;
            pointer-events: none;
        }


     }

}




.snfw[data-aft='documents']{

    .mediazone {

        .mz-preview {

            position: relative;
            z-index: 1;
            display: flex;
            width: 6rem;
            height: 7.5rem;
            border-radius: 0;
            box-shadow: 1px 1px 2px rgba(0,0,0,.25);
            margin: 0 1rem 1rem 0;
            background-color: var(--color-white);
            opacity: 1;
            filter: none;
            transform: none;
            img {
                display: none;
            }

            &:before {
                position: absolute;
                right: -.5rem;
                bottom: 1rem;
                box-shadow: 1px 2px 3px rgba(0,0,0,.25);
                content: attr(data-ext);
                font-weight: 700;
                padding: 4px 6px;
                font-size: 14px;
                text-transform: uppercase;
            }

            &[data-ext='pdf']
            {
                &:before { background-color: var(--color-red-400); }
                &:hover:before { background-color: var(--color-red-600);
                }
            }

            &[data-ext='txt'],
            &[data-ext='log']
            {
                &:before { background-color: var(--color-gray-600); }
                &:hover:before { background-color: var(--color-gray-800); }
            }
            &[data-ext='txt']:before { content: 'TXT'; }
            &[data-ext='log']:before { content: 'LOG'; }


            &[data-ext='map'],
            &[data-ext='js'],
            &[data-ext='json']
            {
                &:before { background-color: var(--color-green-500); }
                &:hover:before { background-color: var(--color-green-700); }
            }
            &[data-ext='map']:before { content: 'MAP'; }
            &[data-ext='js']:before { content: 'JS'; }
            &[data-ext='json']:before { content: 'JSON'; }


            &[data-ext='css'] {
                &:before { background-color: var(--color-pink-400); }
                &:hover:before { background-color: var(--color-pink-600); }
            }
            &[data-ext='css']:before { content: 'CSS'; }


            &[data-ext='pcss']
            {
                &:before { background-color: var(--color-purple-500); }
                &:hover:before { background-color: var(--color-purple-800); }
            }
            &[data-ext='pcss']:before { content: 'PCSS'; }

            &[data-ext='php']
            {
                &:before {  background-color: var(--color-blue-500); }
                &:hover:before { background-color: var(--color-blue-600); }
            }
            &[data-ext='php']:before { content: 'PHP'; }

            &[data-ext='ico'],
            &[data-ext='svg'],
            &[data-ext='gif'],
            &[data-ext='png'],
            &[data-ext='jpg'],
            &[data-ext='jpeg'],
            &[data-ext='heic']{
                &:before { background-color: var(--color-orange-500); }
                &:hover:before { background-color: var(--color-orange-800); }
            }
            &[data-ext='svg']:before { content: 'SVG'; }
            &[data-ext='gif']:before { content: 'GIF'; }
            &[data-ext='png']:before { content: 'PNG'; }
            &[data-ext='jpg']:before { content: 'JPG'; }
            &[data-ext='jpeg']:before { content: 'JPEG'; }
            &[data-ext='heic']:before { content: 'HEIC'; }
            &[data-ext='ico']:before { content: 'ICO'; }

            &[data-ext='directory'].dragover {
                color: var(--color-blue-500)!important;
                &:before {
                    color: var(--color-blue-500)!important;
                }

            }

        }

    }

}







