/* show mobile menu */
body.smm {

    max-height: 100vh;
    overflow: hidden;

    nav#nav-header {

        a.brand,
        a.brand:link,
        a.brand:visited {
            left: calc(50% - 5em);
        }

        overflow: scroll;

        #mmt span i {
            top: 10px;
            width: 40px;
            &:nth-child(1){ transform: rotate(45deg); }
            &:nth-child(2){ opacity: 0; }
            &:nth-child(3){ transform: rotate(-45deg); }
            z-index: 10;
        }

        ul {
            opacity: 1;
            pointer-events: auto;
            overflow: scroll;
        }

    }

}

body.scrolled {

    nav#nav-header {

        height: var(--top-nav-desktop-height-scrolled);

        .bg {
            opacity: 1;
            transform: translateY(0);
        }

        a.brand,
        a.brand:link,
        a.brand:visited
        {
            top: 0;
            width: var(--top-nav-desktop-height-scrolled);
            height: var(--top-nav-desktop-height-scrolled);
            svg {
                width: var(--top-nav-desktop-height-scrolled);
                height: var(--top-nav-desktop-height-scrolled);
            }
        }

        ul.navbar {
            height: var(--top-nav-desktop-height-scrolled);

            li {

                a,
                a:link,
                a:visited
                {
                    height: 3rem;
                    border-radius: 0;
                }

                ul {
                    top: calc(3rem + 3px);

                    li {

                        a,
                        a:link,
                        a:visited
                        {
                            height: revert;
                        }

                        &:first-child a {
                            border-radius: 0 0 0 0;
                            box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.25);
                        }

                    }

                }

            }

        }

    }

}

svg#sprites { display: none; }
