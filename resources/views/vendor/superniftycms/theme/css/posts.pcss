
/* blog posts */

/* Selects if the attribute is present at all */
[data-size] { }

/* Selects if the attribute has a particular value */
[data-state="open"],
[aria-expanded="true"] { }

/* "Starts with" selector, meaning this would match "3" or anything starting with 3, like "3.14" */
[data-version^="3"] { }

/* "Contains" meaning if the value has the string anywhere inside it */
[data-company*="google"] { }


body[data-topic_url^='blog'] {

    --header-color-one: var(--color-kmm-dark-blue-30);
    --header-color-two: var(--color-kmm-dark-blue-30);


    header {

        position: relative;
        background-color: var(--color-kmm-dark-blue-30);
        margin-bottom: 0;
        padding: 7.5em 2em 2em 2em;

        /* keep the bottom slash above all */
        &:after { z-index: 9999; }

        img {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100vw;
            min-height: 100%;
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            right: 0;
            object-fit: cover;
            object-position: center;
            opacity: .5;
            z-index: 1;
        }

        i {
            position: absolute;
            left: 0;
            top: 0;
            right: 0;
            bottom: 0;
            width: 100vw;
            height: 100%;
            background-color: inherit;
            z-index: 2;
            color: inherit;
            background: linear-gradient(90deg, var(--color-kmm-dark-blue-30) 0%, transparent 100%);

        }

        .container {
            position: relative;
            z-index: 3;

            h1 {
                position: relative;
                font-size: 3em;
                line-height: 1;
                margin: 0 auto .25em 0;
            }


        }


        @screen lg {

            img {
                left: 33vw;
                width: 67vw;
            }

            i {
                left: 33vw;
                width: 67vw;
            }

            h1 {
                width: 50%;

            }

        }


    }


    .featured-posts {

        display: flex;
        flex-direction: column;
        list-style: none;

        li {

            a,
            a:link,
            a:visited {

                font-weight: 700;
                line-height: 1;
                margin-bottom: 2em;
            }
        }
    }




}
