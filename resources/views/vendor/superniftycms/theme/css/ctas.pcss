    background-repeat: no-repeat;
    background-position: right 2em bottom 2em;
    background-size: 3em;
    background-color: currentColor;

    h4 {
        font-size: 1.75em;
        font-weight: 700;
        color: var(--color-white);
        text-align: left;
    }

    p {
        color: var(--color-white);
        font-size: .875em;
        text-align: left;
        margin: 0 auto 1em 0;
    }

    strong {
        font-weight: 700;
        font-size: .875em;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        padding: .5em .75em .5em 1em;
        background-color: var(--color-green-500);
        color: var(--color-white);
        border-radius: .25em;
        margin-right: auto;
        transition: all 250ms ease-in-out;

        &:after {
            font-family: 'Material Symbols Outlined';
            font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
            content: '\ea50';
            margin-left: .5em;
        }

    }

    i {
        position: absolute;
        inset: 1em;
        background-color: rgba(255,255,255, .05);
        border-radius: .5em;
        transform: rotate(-2deg) skew(-6deg);
        transition: all 250ms ease-in-out;
    }

}

a.cta-slash:hover,
a.cta-slash:focus,
a.cta-slash:active {

    strong {
        background-color: var(--color-green-600);
        color: var(--color-white);
        transform: scale(1.1);
    }

    i {
        background-color: rgba(255,255,255, .1);
    }

}



a.cta-pend,
a.cta-pend:link,
a.cta-pend:visited {

    position: relative;
    display: flex;
    align-items: flex-start!important;
    margin: 2em auto 2em 0;
    padding: 1em 1em 3em 0!important;
    transition: all 250ms ease-in-out;

    border-top: .5em solid currentColor;

    strong {
        display: inline-block;
        padding: 1em;
        background-color: currentColor!important;


    }


}


