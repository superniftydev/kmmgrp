
a.cta,
a.cta:link,
a.cta:visited {
    position: relative;
    display: flex;
    align-items: center;
    background-color: var(--color-kmm-light-blue);
    color: var(--color-white);
    padding: .75em .5em .75em 2em;
    border-radius: 2em;
    text-transform: uppercase;
    font-weight: 700;
    transition: all 250ms ease-in-out;
    pointer-events: auto;
    user-select: none;
    font-size: .5rem;
    line-height: .9;
    &.sm { font-size: .675rem; }
    &.md { font-size: .75rem; }
    &.lg { font-size: .875rem; }
    &.xl { font-size: 1rem; }
    &.xxl { font-size: 1.5rem; }

    &.start { margin-right: auto; }
    &.center { margin-left: auto; margin-right: auto; }
    &.end { margin-left: auto; }

    &:after {
        font-family: 'Material Symbols Outlined';
        font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
        content: '\e5cc';
        font-size: 1.5em;
        line-height: 0;
        margin-left: .25em;
    }
}

a.cta:active,
a.cta:hover,
a.cta:focus {
    background-color: var(--color-green-500);
    color: var(--color-white);
    transform: scale(1.1);
}






