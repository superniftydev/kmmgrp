

.model {

    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    flex-grow: 1;
    opacity: 0;
    transition: opacity 250ms ease-in-out;
    &.loaded { opacity: 1; }

    model-viewer {
        position: absolute;
        inset: 0;
        display: flex;
        width: 100%;
        height: 100%;
        flex-grow: 1;

    }

    model-viewer::part(default-progress-bar) {
        display: none;
    }



}

body[data-admin] { #modelviewer .controls #settings { display: flex; } }
