:root {
    --screen-sm: 640px;
    --screen-md: 768px;
    --screen-lg: 1024px;
    --screen-xl: 1280px;
    --screen-2xl: 1536px;
}
@media (min-width: 640px) { :root { --boxed: 640px; } }
@media (min-width: 768px) { :root { --boxed: 768px; } }
@media (min-width: 1024px) { :root { --boxed: 1024px; } }
@media (min-width: 1280px) { :root { --boxed: 1280px; } }
@media (min-width: 1536px) { :root { --boxed: 1536px; } }

