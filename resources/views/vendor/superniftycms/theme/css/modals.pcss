
.modal-toggle-w {

    position: absolute;
    bottom: 2em;
    left: 2em;
    cursor: pointer;

    z-index: 999999999999999999;
    color: #fff;
    font-size: 2em;
    font-weight: 700;


}

.modal-w {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    z-index: 9999999999;
    transition: all 250ms ease-in-out;
    background-color: rgba(0,0,0,.75);
    opacity: 0;
    pointer-events: none;
    &.loading { left: -200vw; }

    .modal-inner {
        position: absolute;
        width: 100vw;
        height: inherit;
        display: flex;
        justify-content: center;
        align-items: center;
        transform: scale(0);
        transition: inherit;
        pointer-events: none;
    }

    .modal-content {

        position: relative;
        display: flex;
        flex-direction: column;
        padding: 2em;
        border-radius: .25em;
        box-shadow: 1px 2px 3px rgba(0,0,0,.5);
        background-color: rgba(0,0,0,1);
        width: 100%;
        max-width: 500px;
        margin: 1em;

        .intro {

            margin-bottom: 1em;

            h2 {
                color: #fff;
                font-size: 1.5em;
                margin-bottom: 1em;
                font-weight: 700;
            }

            p {
                color: #fff;
                font-size: .875em;
                font-weight: 400;
            }

        }

        form {
            display: inherit;
            flex-direction: inherit;
            padding: inherit;
        }

        .more-toggle {

            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 3em;
            height: 3em;
            font-size: 2em;
            line-height: 1;
            pointer-events: auto;
            transition: all 250ms ease-in-out;
            transform: rotate(45deg);

            &:after {
                font-family: 'Material Symbols Outlined';
                font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
                content: '\e5cd';
            }

        }

        .more {

            position: fixed;
            left: 0;
            bottom: 0;
            color: rgba(255,255,255,0.8);
            text-align: center;
            background-color: rgba(0,0,0,0.6);
            padding: 4em 20%;
            display: flex;
            flex-direction: column;
            gap: 1.75em;
            opacity: 0;
            height: 0;
            pointer-events: none;

            .more-x {
                font-size: 0.85em;
                border: 1px solid rgba(255,255,255,0.8);
                border-radius: 50%;
                padding: 0.15em;
                margin: 0 auto;
                cursor: pointer;
            }

        }

    }

    &.active {
        pointer-events: auto;
        opacity: 1;
        left: 0;

        .modal-inner {
            transform: scale(1);
        }

        .modal-content { pointer-events: auto; }

    }

    &.more {

        .more-toggle { transform: rotate(360deg); }

        .more {
            max-height: 400px;
            opacity: 1;
        }

    }

    &.posting {

        button {
            color: transparent!important;

            .loader-w {
                opacity: 1;
                background-color: #FFF;
                .loader div { border: 4px solid #000; }

            }
        }

    }

}

.modal-x {

    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 4em;
    height: 4em;
    font-size: 3em;
    line-height: 1;
    pointer-events: auto;
    transition: all 250ms ease-in-out;
    color: #fff;
    border: 2px solid #fff;

    &:hover {
        transform: scale(1.25) rotate(360deg)!important;

    }

    &:after {
        font-family: 'Material Symbols Outlined';
        font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
        content: '\e5cd';

        transition: all 250ms ease-in-out;



    }



}

.modal-w .modal-x {
    position: absolute;
    top: -1em;
    right: -1em;
    pointer-events: auto;
    z-index: 99;
    background-color: #000;
    cursor: pointer;
    font-size: 2em;
    width: 3em;
    height: 3em;
    border-radius: 3em;
    box-shadow: 1px 2px 3px rgba(0,0,0,.25);
    transition: all 250ms ease-in-out;
    &:hover {
        transform: rotate(360deg);
    }


}


/* newsletter */
.modal-w#newsletter-modal,
.modal-w#contact-modal {

    background-color: rgba(0,0,0,.5);
    transition: all 250ms ease-in-out;

    h1, h2, h3, h4, h5, p {
        color: #fff;
        text-align: center;
    }

    h2 {
        font-size: 2em;
        font-weight: 900;
        margin-bottom: 1em;
    }

    p {
        font-size: 1.25em;
    }



    .modal-content {
        max-width: 400px;
        padding: 1em;
        transition: all 250ms ease-in-out;

        .intro {
            padding: 2em;
        }

        .bot,
        .error,
        .working,
        .success {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 5;
            pointer-events: none;
            opacity: 0;
            padding: 3em;
        }

        .bot {
            background-color: rgba(0,0,0,.95);

            span {
                display: flex;
                flex-direction: column;
                align-items: center;
                color: var(--color-red-400);
                font-size: 1em;

                &:before {
                    display: block;
                    margin-bottom: 1em;
                    font-family: 'Material Symbols Outlined';
                    font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
                    content: '\f882';
                    font-size: 10em;
                }
            }
            h2, p, span { color: var(--color-red-400); }


        }

        .working {
            background-color: rgba(0,0,0,.95);
        }

        .error {
            background-color: rgba(0,0,0,1);
            span {

                &:after {
                    font-family: 'Material Symbols Outlined';
                    font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
                    content: '\f6a2';
                    font-size: 10em;
                }
            }
            h2, p, span { color: var(--color-red-400); }

        }

        .success {
            background-color: rgba(0,0,0,1);

            span {

                &:after {
                    font-family: 'Material Symbols Outlined';
                    font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 200, 'opsz' 48;
                    content: '\e813';
                    font-size: 10em;
                }
            }
            span { color: var(--color-green-400); }


        }

        form {

            .fields {

                label:nth-child(2) { display: none; }

                input[type='email'] {
                    color: #fff;

                    &:focus {
                        color: #ff0;
                    }
                }
            }

            .submit {
                pointer-events: none;
                opacity: .25;
            }

        }

    }

    &.valid_email .modal-content form {
        .fields input[type='email'] { color: #3f3; }
        .submit {
            pointer-events: auto;
            opacity: 1;
        }
    }

    &.working .modal-content form {
        .working { opacity: 1; }
    }

    &.success .modal-content form {
        .success { pointer-events: auto; opacity: 1; }
    }

    &.invalid_email .modal-content form {
        .invalid_email { pointer-events: auto; opacity: 1; }
    }

    &.error .modal-content form {
        .error { pointer-events: auto; opacity: 1; }
    }

    &.bot .modal-content form {
        .bot { pointer-events: auto; opacity: 1; }
    }


}



/* video */
.modal-w#video-modal {

    background-color: rgba(0,0,0,.85);

    .modal-content {

        padding: 0;
        margin: 0;
        background-color: transparent;
        box-shadow: none;
        max-width: 90vw;
        max-height: 90vh;

        #youtubePlayer,
        #vimeoPlayer {
            display: flex;
            justify-content: center;
            align-items: center;

            background-color: transparent;
            width: 90vw;
            height: 80vh;
            @screen sm {
                width: 90vw;
                height: 90vh;
            }

            iframe {
                background-color: transparent;
                width: 90vw;
                height: 80vh;
                @screen sm {
                    width: 90vw;
                    height: 90vh;
                }
            }

        }


    }

    &.vimeo { #youtubePlayer { display: none; } }
    &.youtube { #vimeoPlayer { display: none; } }

}


